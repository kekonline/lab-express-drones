<div>
  <h2>Available drones</h2>
  {{#each this.allDrones}}
      <h3>{{this.name}}</h3>
      <p>Number Of Propellers: {{this.propellers}}</p>
      <p>Max Speed: {{this.maxSpeed}} m/s</p>
    
      <br>
      <a href="/drones/{{this._id}}/edit">
        <button>Actualizar</button>
      </a>

      <form action="/drones/{{this._id}}/delete" method="post">
        <button>Borrar drone</button>
      </form>
  {{/each}}
</div>